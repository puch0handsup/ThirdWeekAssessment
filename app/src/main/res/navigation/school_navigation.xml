<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/SchoolsFragment"
    android:id="@+id/schools_navigation">

    <fragment
        android:id="@+id/SchoolsFragment"
        android:name="com.example.thirdweekassessment.view.SchoolListFragment"
        tools:layout="@layout/fragment_school_list"
        android:label="NYC Schools">

        <action
            android:id="@+id/action_SchoolsFragment_to_DetailsFragment"
            app:destination="@id/DetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.example.thirdweekassessment.view.SchoolDetailFragment"
        tools:layout="@layout/fragment_school_detail"
        android:label="School Details">
    </fragment>


</navigation>